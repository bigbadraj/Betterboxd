{
    "name": "Letterboxd Additional Icons",
    "description": "Adds custom icons to movies based on specific lists on Letterboxd.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://letterboxd.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*"
            ],
            "matches": ["https://letterboxd.com/*"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"]
}